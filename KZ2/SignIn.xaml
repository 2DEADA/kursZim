    </Window.Resources>
    
    <Grid Margin="0,0,2,0" Background="White" >
        <Grid.Effect>
            <BlurEffect RenderingBias="Quality" Radius="1"/>
        </Grid.Effect>
        <Rectangle Fill="#FFBBBBC1" HorizontalAlignment="Left" Height="387" Margin="41,14,0,0"  VerticalAlignment="Top" Width="322"/>

        <Label Content="username or email adress" HorizontalAlignment="Left" Margin="65,145,0,0" VerticalAlignment="Top" Foreground="White" Height="27"/>
        <Label Content="password" HorizontalAlignment="Left" Margin="63,196,0,0" VerticalAlignment="Top" Foreground="White" Height="27"/>
        <Label Content="Sign in to Programm" HorizontalAlignment="Left" Margin="80,81,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="24" Background="{x:Null}" Foreground="White" Height="43"/>
        <TextBox x:Name="txtLogin" HorizontalAlignment="Left" Height="24" Margin="67,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="277" RenderTransformOrigin="0.509,0.617"/>
        <TextBox x:Name="txtPassword" Height="24" Margin="67,223,56,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="btnVoiti"  Content="Войти" HorizontalAlignment="Left" Margin="66,273,0,0" VerticalAlignment="Top" Width="272" Foreground="White" Background="#FF0FD170" Height="21" Click="BtnVoiti_Click" Style="{DynamicResource btn1}" />
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="55" Margin="65,316,0,0"  VerticalAlignment="Top" Width="274"/>
        <Label Content="New to programm?" HorizontalAlignment="Left" Margin="80,331,0,0" VerticalAlignment="Top" Foreground="Black" Height="27"/>
        <Button x:Name="btnRegistr" Content="Регистрация" HorizontalAlignment="Left" Margin="200,333,0,0" VerticalAlignment="Top" Width="134" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF6470E8" Click="BtnRegistr_Click" Height="21" />
        <Image Margin="164,19,162,331" Source="free-icon-leaf-7519001.png" Stretch="Fill"/>

    </Grid>

</Window>
